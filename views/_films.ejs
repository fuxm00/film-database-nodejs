<table>
    <tr>
        <th>Title</th>
        <th>Year</th>
    </tr>

    <% for (const film of films) { %>
        <tr>
            <td><%= film.title %></td>
            <td><%= film.year %></td>

            <% if (!film.favourite) { %>
                <td><a href="/favourites/<%= film.id %>">🤍</a></td>
            <% } else { %>
                <td><a href="/remove-favourite/<%= film.id %>">🧡</a></td>
            <% } %>

            <% if (!film.toWatch) { %>
                <td><a href="/add-to-watch/<%= film.id %>">⬜</a></td>
            <% } else { %>
                <td><a href="/remove-from-to-watch/<%= film.id %>">👀</a></td>
            <% } %>

        </tr>
    <% } %>
</table>
